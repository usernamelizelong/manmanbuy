

/*页面主体*/
.view_layout {
  width: 100%;
  background-color: #fdfdfd;
  position: relative;
  /*头部样式*/
  > header {
    width: 100%;
    height: 44px;
    line-height: 44px;
    background-color: #ff841d;
    box-shadow: 0px 1px 4px #9c9c9c;
    > .h-back {
      float: left;

      > a {
        a:hover {
          text-decoration: none;
        }
        display: block;
        width: 50px;
        //font-size: 20px;
        text-align: center;
        color: #fff;
        ::before {
          content: '';
          font-weight: bold;
        }
      }
    }
    > span {
      display: block;
      width: 100%;
      font-size: 20px;
      text-align: center;
      font-weight: bold;
      color: #fff;
    }
  }
  .product_link{
    width: 100%;
    padding: 10px;
    > form{
      width: 100%;
      > h3{
        font-size: 12px;
        line-height: 30px;
        color: #636363;
      }
      >  input{
        padding: 6px 0;
        width: 100%;
        font-size: 18px;
        border: none;
        border-bottom: 1px solid #ccc;
        color: #ccc;
      }
    }
  }
  .reset_button{
    width: 100%;
    height: 50px;
    text-align: center;
    line-height: 50px;
    .sub_price{
      width: 160px;
    }
    .sub_reset{
      width: 80px;
    }
    > input[class^="sub"]{
      height: 40px;
      line-height: 38px;
      font-size: 16px;
      border-radius: 100px;
      border:1px solid #cbcbcb;
      background-color: #fdfdfd;
      color: #333333;
    }
  }
//  识别商品的真假促销
  .promotion{
    margin-left: 15px;
    > h3{
      font-size: 14px;
      line-height: 20px;
    }
    > p{
      line-height: 20px;
      color: #989898;
    }
  }
  .blank{
    width: 100%;
    height: 600px;
  }
  .banner_down{
    width: 100%;
    height: 50px;
    background-color: #f8f6f3;
    position: fixed;
    bottom: 0;
    left: 0;
    > a{
      width: 50px;
      height: 50px;
      float: left;
      position: relative;
      cursor: pointer;
      > i{
        position: absolute;
        top: 17px;
        left: 13px;
        font-size: 25px;
        color: #ccc;
      }
    }
    .baner{
      width: 100%;
      height: 100%;
      position: relative;
      margin-left: 50px;
      > .manlogo{
        width: 41px;
        height: 41px;
        float: left;
        background-image: url("../../images/manmanlogo.png");
        background-repeat: no-repeat;
        background-size: 41px;
        margin-top: 4px;
        margin-right: 5px;
      }
      > h3{
        font-size: 18px;
        display: block;
        color: #878787;
        line-height: 30px;
      }
      > p{
        color: #878787;
        float: left;
      }
      .downopen{
        width: 74px;
        height: 33px;
        line-height: 33px;
        text-align: center;
        border-radius: 4px;
        color: #fff;
        border-bottom: 3px solid #fd5501;
        background-color: #fd7701;
        position: absolute;
        bottom: 10px;
        right: 70px;
      }
    }
  }
}