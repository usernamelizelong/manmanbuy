.discount {
  width: 100%;
  height: 100%;
}
.discount > .discount-header {
  position: relative;
  width: 100%;
  height: 44px;
  padding-left: 50px;
  padding-right: 50px;
  background: #ff841d;
}
.discount > .discount-header > .discount-back,
.discount > .discount-header .discount-menu {
  position: absolute;
  display: block;
  width: 50px;
  height: 44px;
}
.discount > .discount-header > .discount-back {
  left: 15px;
  color: white;
  top: 10px;
}
.discount > .discount-header > .discount-menu {
  display: block;
  width: 50px;
  height: 44px;
  right: 8px;
  background-image: url("../../imgs/home/header_app.png");
  background-repeat: no-repeat;
  background-size: 40px 35px;
  top: 5px;
}
.discount > .discount-header > h1 {
  line-height: 44px;
  text-align: center;
  font-size: 22px;
  font-weight: bold;
  color: white;
  font-family: Microsoft YaHei;
}
.discount > .container {
  height: 100%;
  box-sizing: border-box;
}
.discount > .container > .row {
  height: 100%;
  padding: 0;
}
.discount > .container > .row > .border-img {
  height: 244px;
  border: 1px solid #eee;
  box-sizing: border-box;
}
.discount > .container > .row > .border-img > #productId {
  height: 100%;
  display: block;
  font-family: Microsoft YaHei;
}
.discount > .container > .row > .border-img > #productId > .img {
  text-align: center;
  vertical-align: middle;
}
.discount > .container > .row > .border-img > #productId > .img > img {
  width: 140px;
  height: 140px;
  vertical-align: middle;
}
.discount > .container > .row > .border-img > #productId > .productName {
  height: 36px;
  line-height: 18px;
  font-size: 14px;
  font-weight: bold;
  font-family: Microsoft YaHei;
  color: #333;
}
.discount > .container > .row > .border-img > #productId > .productPrice {
  color: red;
}
.discount > .container > .row > .border-img > #productId > .productFrom,
.discount > .container > .row > .border-img > #productId .productTime {
  color: #a1a1a1;
  font-size: 12px;
  float: left;
}
